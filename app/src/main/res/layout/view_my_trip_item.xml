<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_item_ripple"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp"
    android:clickable="true"
    android:focusable="true"

    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="64dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        android:layout_height="64dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryOpacity"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:paddingLeft="12dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/pickup_text"
                android:textStyle="bold"
                android:id="@+id/username"
                android:layout_marginRight="@dimen/label_spacing"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/pickup_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/destination_text"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/label_spacing"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:id="@+id/destination_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:paddingTop="6dp"
            android:textSize="10dp"
            android:id="@+id/time"

            android:fontFamily="sans-serif"
            android:textColor="@color/grey"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>